

@page "/"
@using MudBlazorUI.Components.Shared


<!--Slide show Section-->

<MudCarousel Class="mud-width-full" Style="height:800px;" TData="string" AutoCycle="true" Interval="5000">
    @foreach (var imageUrl in ImageUrls)
    {
        <MudCarouselItem Transition="Transition.Slide">
            <div class="d-flex" style="height:100%; padding: 0; margin: 0;">
                <img src="@imageUrl" style="width: 100%; height: auto;" />
            </div>
        </MudCarouselItem>
    }
</MudCarousel>



<!-- About Section -->
<MudContainer style="margin-top: 150px; margin-bottom: 150px;">
    <MudGrid>
        <!-- Left Column: Image -->
        <MudItem xs="12" md="6">
            <div style="display: flex; justify-content: center; align-items: center;">
                <img src="./Assets/4.png" alt="About Us Image" style="max-width: 100%; height: auto; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);" />
            </div>
        </MudItem>

        <!-- Right Column: About Us Content -->
        <MudItem xs="12" md="6">
            <div style="padding: 20px;">
                <h2 style="font-size: 24px; margin-bottom: 10px;">About Us</h2>
                <p style="font-size: 16px; line-height: 1.6; margin-bottom: 15px;">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed et urna sit amet quam vehicula volutpat. Integer vel nisi sapien.
                    Duis nec risus vel mauris lacinia vestibulum. Nam volutpat nulla in eros consequat, vitae tincidunt tortor convallis.
                </p>
                <p style="font-size: 16px; line-height: 1.6; margin-bottom: 15px;">
                    Mauris interdum semper metus, at facilisis ex tincidunt sit amet. Vestibulum nec ipsum tincidunt, laoreet nisi ac, consequat felis.
                    Phasellus vel lectus vitae tortor placerat lacinia. Curabitur fermentum interdum urna nec ullamcorper.
                </p>
                <!-- Clickable Button -->
                <MudButton Variant="Variant.Filled" Color="Color.Primary" href="https://example.com" target="_blank">Visit Website</MudButton>
            </div>
        </MudItem>
    </MudGrid>
</MudContainer>







